apiVersion: v1
kind: ConfigMap
metadata:
  name: lockss-logrotate-config
data:
  lockss_stdout_logs.conf: |
    /lockss/logs/*/stdout.log {
        daily
        missingok
        rotate 10
        compress
        delaycompress
        dateformat -%Y%m%d
        notifempty
        copytruncate
    }
---
apiVersion: batch/v1
kind: CronJob
metadata:
  name: lockss-logrotate-cronjob
  labels:
    app: lockss
    lockss-stack-id: {{STACK}}
spec:
  schedule: "0 0 * * *"
  concurrencyPolicy: Forbid
  jobTemplate:
    spec:
      template:
        spec:
          restartPolicy: OnFailure
          containers:
          - name: lockss-logrotate
            image: {{LOGROTATE_IMG}}:{{LOGROTATE_VERSION}}
            imagePullPolicy: IfNotPresent
            volumeMounts:
            - name: logrotate-conf
              mountPath: /etc/logrotate.d
{{#USE_LOCKSS_CFG}}
            - name: lockss-cfg-logs
              mountPath: /lockss/logs/lockss-cfg-logs
{{/USE_LOCKSS_CFG}}
{{#USE_LOCKSS_CRAWL}}
            - name: lockss-crawl-logs
              mountPath: /lockss/logs/lockss-crawl-logs
{{/USE_LOCKSS_CRAWL}}
{{#USE_LOCKSS_MD}}
            - name: lockss-md-logs
              mountPath: /lockss/logs/lockss-md-logs
{{/USE_LOCKSS_MD}}
{{#USE_LOCKSS_POL}}
            - name: lockss-pol-logs
              mountPath: /lockss/logs/lockss-pol-logs
{{/USE_LOCKSS_POL}}
{{#USE_LOCKSS_REPO}}
            - name: lockss-repo-logs
              mountPath: /lockss/logs/lockss-repo-logs
{{/USE_LOCKSS_REPO}}
{{#USE_LOCKSS_SOAP}}
            - name: lockss-soap-logs
              mountPath: /lockss/logs/lockss-soap-logs
{{/USE_LOCKSS_SOAP}}
          volumes:
          - name: logrotate-conf
            configMap:
              name: lockss-logrotate-config
{{#USE_LOCKSS_CFG}}
          - name: lockss-cfg-logs
            persistentVolumeClaim:
              claimName: lockss-cfg-logs-pvc
{{/USE_LOCKSS_CFG}}
{{#USE_LOCKSS_CRAWL}}
          - name: lockss-crawl-logs
            persistentVolumeClaim:
              claimName: lockss-crawl-logs-pvc
{{/USE_LOCKSS_CRAWL}}
{{#USE_LOCKSS_MD}}
          - name: lockss-md-logs
            persistentVolumeClaim:
              claimName: lockss-md-logs-pvc
{{/USE_LOCKSS_MD}}
{{#USE_LOCKSS_POL}}
          - name: lockss-pol-logs
            persistentVolumeClaim:
              claimName: lockss-pol-logs-pvc
{{/USE_LOCKSS_POL}}
{{#USE_LOCKSS_REPO}}
          - name: lockss-repo-logs
            persistentVolumeClaim:
              claimName: lockss-repo-logs-pvc
{{/USE_LOCKSS_REPO}}
{{#USE_LOCKSS_SOAP}}
          - name: lockss-soap-logs
            persistentVolumeClaim:
              claimName: lockss-soap-logs-pvc
{{/USE_LOCKSS_SOAP}}
